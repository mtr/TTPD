if [ -z "$CONFPATH" ]; then
    CONFPATH=@statistics_dir@
fi

. $CONFPATH/general_config.sh

RESOLUTION=days
START=`date +%Y-%m-%d`
END=`date +%Y-%m-%d`
FNAME=today_$RESOLUTION

ttpd_analyze $LOGS \
    --unify-client-addresses-to=$UNIFIED_CLIENT_ADDRESS \
    --restrict-to=$RESTRICTIONS \
    --resolution=$RESOLUTION \
    --from=$START --to=$END \
    > $EXPORT/$FNAME.txt

RESOLUTION=hours
FNAME=today_$RESOLUTION

ttpd_analyze $LOGS \
    --unify-client-addresses-to=$UNIFIED_CLIENT_ADDRESS \
    --restrict-to=$RESTRICTIONS \
    --resolution=$RESOLUTION \
    --from=$START --to=$END \
    --chart=$EXPORT/graphics/$FNAME.png \
    > $EXPORT/$FNAME.txt

log "stopping"
